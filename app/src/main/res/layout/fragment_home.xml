<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.smarteist.autoimageslider.SliderView
            android:padding="@dimen/_5sdp"
            android:id="@+id/view_flipper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="1"
            app:sliderStartAutoCycle="true" />



        <TextView
            android:textSize="@dimen/_20sdp"
            android:textAlignment="center"
            android:id="@+id/service_frgment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Services"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/home_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/service_frgment"
            android:orientation="horizontal"
            android:weightSum="3">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/home_service_pickup"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/dropbox"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/pickup_drop"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"></TextView>
            </GridLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="140dp"
                android:background="@android:color/black"/>


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/home_service_Laundry"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/washing_machine_24"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="Laundry"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"></TextView>
            </GridLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="140dp"
                android:background="@android:color/black"/>
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/home_service_deliver"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/mover_truck_24"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="Dry Cleaning"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"></TextView>
            </GridLayout>

        </LinearLayout>

        <Button
            android:id="@+id/home_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_service"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Book Now"
            android:textColor="@android:color/white" />

        <LinearLayout

            android:id="@+id/home_prodect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_btn"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:columnCount="0"
                android:gravity="center"
                android:orientation="vertical"
                android:rowCount="0"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/home_prodect_pickup"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/touch_24"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="Place order"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/home_prodect_Laundry"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/dropbox"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="Pick Up"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"></TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/home_prodect1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_prodect"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:columnCount="0"
                android:gravity="center"
                android:orientation="vertical"
                android:rowCount="0"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/home_prodect1_pickup"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/iron_24"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="Wash &amp; iron"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/home_prodect1_Laundry"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/mover_truck_24"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:text="Delivery"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

