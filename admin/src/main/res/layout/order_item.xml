<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Order_click"
        android:weightSum="2"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/ic_launcher"
                    android:layout_width="70dp"
                    android:layout_height="130dp"
                    android:id="@+id/Order_iv"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/Order_iv"
                    android:id="@+id/Order_date"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:text="Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/Order_iv"
                    android:id="@+id/Order_name"

                    android:textSize="15dp"
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/Order_iv"
                    android:id="@+id/Order_email"
                    android:textSize="15dp"
                    android:text="Email"
                    android:layout_below="@id/Order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/Order_iv"
                    android:id="@+id/Order_number"
                    android:textSize="15dp"
                    android:text="Number"
                    android:layout_below="@id/Order_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/Order_iv"
                    android:id="@+id/Order_address"
                    android:layout_below="@id/Order_number"
                    android:textSize="15dp"
                    android:text="Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/Order_iv"
                    android:id="@+id/Order_payment"

                    android:textSize="15dp"
                    android:text="Payment"
                    android:layout_below="@id/Order_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/Order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_alignRight="@id/Order_date"

                    android:text="Total Price" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>